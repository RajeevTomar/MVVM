<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="itemData"
            type="com.positivemind.newsapp.headline.HeadlineModel" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_corner"
        android:layout_marginBottom="24dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/iv_article"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            >

        </ImageView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_white_black"
            ></FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/ll_source"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_bold"
                android:text="@{itemData.source.name}"
                android:textColor="@color/source_color"
                android:textSize="12sp">


            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/robotoslab_bold"
                android:text="@{itemData.publishedDate}"
                android:textColor="@color/source_color"
                android:textSize="12sp">


            </TextView>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_source"
            android:layout_alignParentStart="true"
            android:layout_margin="12dp"
            android:fontFamily="@font/robotoslab_regular"
            android:text="@{itemData.title}"
            android:maxLines="3"
            android:textColor="@color/title_color"
            android:textSize="20sp">


        </TextView>

    </RelativeLayout>

</layout>