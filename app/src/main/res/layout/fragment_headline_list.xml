<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"></import>
        <variable
            name="viewModel"
            type="com.positivemind.newsapp.headline.list.HeadlineListViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        tools:context=".headline.list.HeadlineListFragment">

     <include layout="@layout/toolbar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/toolbar_headline"
         android:layout_alignParentTop="true"
         app:title="@string/title_headlines">

     </include>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_headline_list"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar_headline"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/view_headline_shimmer"/>
                <include layout="@layout/view_headline_shimmer"/>
                <include layout="@layout/view_headline_shimmer"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/toolbar_headline"
            android:orientation="vertical"
            android:id="@+id/rv_headline"
            tools:listitem="@layout/view_headline_list"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            >

        </androidx.recyclerview.widget.RecyclerView>

        <include layout="@layout/view_error"
            android:id="@+id/view_no_connection"
            android:visibility="@{viewModel.noConnection ? View.VISIBLE : View.GONE}">
        </include>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
            >

        </ProgressBar>


    </RelativeLayout>

</layout>
